@model UserEditingViewModel
@{ 
    Layout = "_UserLayout";
}
<h5 class="bg-primary text-white text-center p-2">Create User</h5>
<form asp-action="Create" method="post" name="CreateModel">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.UserName"></label>
        <span asp-validation-for="@Model.UserName"></span>
        <input asp-for="@Model.UserName" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <span asp-validation-for="@Model.Email"></span>
        <input asp-for="@Model.Email" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <span asp-validation-for="@Model.Password"></span>
        <input asp-for="@Model.Password" type="password" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-secondary" asp-action="UserList">Back</a>
</form>