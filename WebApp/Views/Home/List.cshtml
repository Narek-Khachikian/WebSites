@model IEnumerable<Product>

<!DOCTYPE html>
<html>
<head>
    <link href="/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <h6 class="bg-primary text-white text-center m-2 p-2">Product Table</h6>
    <div class="m-2">
        <table class="table table-striped table-bordered p-2">
            <thead>
                <tr><th class="col-3">Name</th><th class="col-2">Price</th><th class="col-3">CategoryId</th></tr>
            </thead>
            <tbody>
               @foreach (Product item in Model)
                {
                    <tr>
                    <th>
                        @if (item.Price > 200)
                        {
                            @:Loxury @item.Name
                        }
                        else
                        {
                            @:Basic @item.Name
                        }
                    </th>
                    <td>@item.Price.ToString("c")</td>
                    <th>@item.CategoryId</th>
                    </tr>
                }

                    
                </tbody>
    </table>
</div>
</body>
</html>