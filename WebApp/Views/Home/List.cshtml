@model IEnumerable<Product>

@{ 
    ViewBag.Title = "List of Products";
    Layout = null;

    Func<Product,object> row =
    @<tr><td>@item.Name</td><td>@item.Price</td><td>@item.CategoryId</td></tr>;

 }

    <!DOCTYPE html>
    <html>
    <head>
        <link href="/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    </head>
    <body>
        <h6 class="bg-primary text-white text-center m-2 p-2">Product Table</h6>
        <div class="m-2">
            <table class="table table-striped table-bordered p-2">
                <thead>
                    <tr><th>Name</th><th>Price</th><th>CategoryId</th></tr>
                </thead>
                <tbody>
                    @foreach (Product item in Model)
                    {
                        @row(item)
                        <partial name="_RowPartial" model="item" />
                    }

                </tbody>
            </table>
        </div>
    </body>
</html>
