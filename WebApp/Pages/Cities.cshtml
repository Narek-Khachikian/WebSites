@page
@inject CityData Data
<div class="m-2">
    <table class="table table-sm table-striped table-bordered">
        <tbody>
            @foreach (City c in Data.Cities)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.Country</td>
                    <td>@c.Population.ToString("n0")</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-light">
        <vc:page-size  />
    </div>
</div>
